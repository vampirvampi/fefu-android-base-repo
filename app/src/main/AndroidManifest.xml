<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.fefu.activitytracker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Activity">
        <activity
            android:name="ru.fefu.activities.ActivityDetails"
            android:exported="false" />
        <activity
            android:name=".mainmenu.MainPartActivity"
            android:exported="false" />
        <activity
            android:name=".welcomescreen.RegistrationActivity"
            android:exported="false" />
        <activity
            android:name=".welcomescreen.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".welcomescreen.WelcomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>